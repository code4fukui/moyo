{
  "name": "moyo",
  "version": "0.0.0",
  "description": "I draw geometric patterns.",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run doc",
    "browserify": "rimraf dist && browserify src/main.coffee -t coffeeify -t browserify-shim -o dist/moyo.js && copyfiles src/test.html -f dist",
    "clean:": "rimraf out",
    "compile": "coffee -c -o out/ src/",
    "doc": "yuidoc -o doc/ src/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "version": "coffee script.coffee version",
    "watch": "coffee -c -w -o out/ src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yucho/moyo.git"
  },
  "keywords": [
    "geometry",
    "tiling",
    "math",
    "image",
    "svg"
  ],
  "author": "Yucho Ho <yucho.ho@gmail.com> (https://yuchoho.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yucho/moyo/issues"
  },
  "homepage": "https://github.com/yucho/moyo#readme",
  "browserify-shim": {
    "svgjs": "global:SVG"
  },
  "dependencies": {
    "svgdom": "0.0.15",
    "svgjs": "^2.6.2",
    "tinycolor2": "^1.4.1"
  },
  "devDependencies": {
    "browserify": "^16.1.1",
    "browserify-shim": "^3.8.14",
    "coffeeify": "^3.0.1",
    "coffeescript": "^2.1.1",
    "copyfiles": "^2.0.0",
    "json-update": "^3.0.0",
    "rimraf": "^2.6.2",
    "taskgroup": "^5.0.1",
    "yuidocjs": "^0.10.2"
  }
}
